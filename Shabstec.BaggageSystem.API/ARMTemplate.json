{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "name": "{dnsNameLabel}",
      "location": "uksouth",
      "properties": {
        "containers": [
          {
            "name": "rabbitmq",
            "properties": {
              "image": "rabbitmq:3-management",
              "resources": {
                "requests": {
                  "cpu": "0.5",
                  "memoryInGB": 1.5
                }
              },
              "ports": [
                {
                  "port": 5672
                },
                {
                  "port": 5671
                },
                {
                  "port": 15672
                }
              ],
              "environmentVariables": [
                {
                  "name": "RABBITMQ_DEFAULT_USER",
                  "value": "{RABBITMQ_DEFAULT_USER}"
                },
                {
                  "name": "RABBITMQ_DEFAULT_PASS",
                  "value": "{RABBITMQ_DEFAULT_PASS}"
                },
                {
                  "name": "RABBITMQ_DEFAULT_VHOST",
                  "value": "test"
                }
              ]
            }
          },
          {
            "name": "{brokerappname}",
            "properties": {
              "image": "baggageplatform.azurecr.io/brokersvc:latest",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1.5
                }
              }, 
              "environmentVariables": [
                {
                  "name": "XMLFILE",
                  "value": "{XMLFILE}"
                }
              ]
            }
          },
          {
            "name": "{clientappname}",
            "properties": {
              "image": "baggageplatform.azurecr.io/clientsvc:latest",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGB": 1.5
                }
              },
              "environmentVariables": [
                {
                  "name": "XMLFILE",
                  "value": "{XMLFILE}"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "imageRegistryCredentials": [
          {
            "server": "baggageplatform.azurecr.io",
            "username": "BaggagePlatform",
            "password": "Mpq+hy2ko01gLyg/oFtYBCKiXOsCDP63"
          }
        ],
        "restartPolicy": "Always",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": 5672
            },
            {
              "protocol": "TCP",
              "port": 5671
            },
            {
              "protocol": "TCP",
              "port": 15672
            }
          ],
          "type": "Public",
          "dnsNameLabel": "{dnsNameLabel}"
        }
      }
    }
  ]
}